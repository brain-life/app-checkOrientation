#!/bin/bash
#PBS -l nodes=1:ppn=8:dc2,walltime=0:05:00
#PBS -N checkOrientation
#PBS -V

if [ $ENV == "IUHPC" ]; then
   module load fsl
fi


export input_nii=$(jq -r .input config.json)

cp $input_nii .

export orientation=$(fslorient t1.nii.gz)

echo $orientation

cat <<EOF > product.json
{"orientation" : "$orientation"}
EOF
